     

@model CategoriesOrtaSayfaModel

<div class="container">
    <div class="d-md-flex justify-content-between align-items-center">
        <h2 class="comon-sub-heading">Main Stories</h2>
        <ul class="nav mb-0 comon-tabs1 nav-pills" id="pills-tab" role="tablist">
            @foreach (var category in Model.Categories)
            {
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="category-tab-@category.CategoryID" data-bs-toggle="pill" data-bs-target="#category-tabs-@category.CategoryID" type="button" role="tab" aria-controls="pills-home" aria-selected="true">@category.CategoryName</button>
                </li>
            }
        </ul>
    </div>

    <div class="tab-content" id="pills-tabContent">
        @foreach (var category in Model.Categories)
        {
            <div class="tab-pane fade" id="category-tabs-@category.CategoryID" role="tabpanel" aria-labelledby="category-tab-@category.CategoryID">
                <div class="row mt-4 row-cols-1 row-cols-md-2 row-cols-lg-4">
                    @if (Model.NewsByCategory.ContainsKey(category))
                    {
                        foreach (var newsItem in Model.NewsByCategory[category])
                        {
                            <div class="col">
                                <a href="/Home/NewsDetails/@newsItem.NewsID" class="populer-sec1-news">
                                    <figure>
                                        <img src="@newsItem.NewsPhoto" alt="big1" />
                                        <span class="st-tags">@category.CategoryName</span>
                                    </figure>
                                    <div class="content-div1">
                                        <h5>@newsItem.NewsTitle</h5>
                                    </div>
                                </a>
                            </div>
                        }
                    }
                </div>
            </div>
        }
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>



@model IEnumerable<Category>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">DataTable with default features</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Kategori Adı</th>
                    <th>Haber Sayısı</th>
                    <th>İşlemler </th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var cat in Model)
                {
                    <tr>
                        <td>@cat.CategoryName</td>
                        <td>
                            @if(@cat.New is not null)
                            {
                                @cat.New.Count().ToString()
                               
                            }
                            else
                            {
                                <p>0</p>
                            }
                        </td>
                        <td></td>
                    </tr>
                }

            </tbody>
           
        </table>
    </div>
    <!-- /.card-body -->
</div>
<a class="btn btn-primary" asp-action="KategoriEkle" asp-controller="KAtegori" asp-area="Admin">Kategori Ekle</a>
